<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_img"
        android:layout_width="@dimen/x213"
        android:layout_height="@dimen/x175"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x43"
        android:background="@mipmap/status_load_error" />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_img"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/x45"
        android:layout_marginRight="@dimen/x15"
        android:text="@string/place_layout_no_access_tip"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/x18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/error_text_tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_text"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginRight="@dimen/x15"
        android:text="@string/place_layout_no_access_tip1"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/x16" />

    <TextView
        android:id="@+id/error_text_tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_text_tip1"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginRight="@dimen/x15"
        android:text="@string/place_layout_no_access_tip2"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/x16" />

    <com.hc.uicomponent.weight.NoDoubleClickButton
        style="@style/ButtonLoginYellowText"
        android:layout_below="@id/error_text_tip2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x30"
        android:gravity="center"
        android:text="@string/refresh" />

</RelativeLayout>
