<resources>

    <style name="AccountSettingMenuStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">75dp</item>
        <item name="android:layout_marginBottom">45dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">9.5dp</item>
    </style>

    <style name="AccountProfileItemContentStyle">
        <item name="android:layout_width">161dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:text">Supplementary info</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AccountProfileLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#CACACA</item>
    </style>

    <style name="AccountProfileItemCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPadding">10dp</item>
    </style>

    <style name="AccountProfileItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">110dp</item>
        <item name="android:drawableStart">@drawable/account_ic_kyc</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:text">Supplementary info</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AccountProfileAuthItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:drawableEnd">@drawable/account_ic_go</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">[unverified]</item>
    </style>

    <style name="AccountProfileInputInfoTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:text">First Name As PANï¼š</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>