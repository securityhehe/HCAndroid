<resources>

    <style name="PermissionTitleTextStyle">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="PermissionTextStyle">
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="PermissionStepContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">37dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@mipmap/permission_step_img</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PermissionStepDot">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginStart">38dp</item>
        <item name="android:background">@drawable/permission_steps_circle</item>
    </style>

</resources>