<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hintText"
                android:layout_width="@dimen/x312"
                android:layout_height="wrap_content"
                android:text="@string/pay_order_tip"

                android:textSize="@dimen/x17"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/stateImage"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 多期还款动态布局 -->
            <LinearLayout
                android:id="@+id/pay_multiple_repay_group_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <ImageButton
                android:id="@+id/pay_multiple_repay_shrink_img_btn"
                android:layout_width="@dimen/x19"
                android:layout_height="@dimen/x20"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginRight="@dimen/x22"
                android:background="@drawable/fold_up" />

        </RelativeLayout>

        <com.hc.uicomponent.weight.NoDoubleClickButton
            android:id="@+id/pay_multiple_repay_btn"
            style="@style/ButtonLoginYellowText"
            android:gravity="center"
            android:text="@string/loan_repay"/>


    </LinearLayout>
</layout>